{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "type": "shell",
    "command": "idf.py",
    "presentation": {
        "clear": true,
        "showReuseMessage": false
    },
    "options": {
        "cwd": "${workspaceFolder}",
        "env": {
            "BASH_ENV": "$IDF_PATH/export.sh"
        }
    },
    "tasks": [
        {
            "label": "app-menuconfig",
            "args": [
                "menuconfig"
            ]
        },
        {
            "label": "app-build",
            "args": [
                "build"
            ]
        },
        {
            "label": "app-clean",
            "args": [
                "fullclean"
            ],
            "presentation": {
                "reveal": "never"
            }
        },
        {
            "label": "app-monitor",
            "args": [
                "monitor"
            ],
        },
        {
            "label": "app-flash",
            "args": [
                "-p",
                "COM3",
                "flash",
                "monitor"
            ]
        },
        {
            "label": "test-menuconfig",
            "args": [
                "menuconfig"
            ],
            "options": {
                "cwd": "${workspaceFolder}/test"
            }
        },
        {
            "label": "test-build",
            "args": [
                "build"
            ],
            "options": {
                "cwd": "${workspaceFolder}/test"
            }
        },
        {
            "label": "test-clean",
            "args": [
                "fullclean"
            ],
            "presentation": {
                "reveal": "never"
            },
            "options": {
                "cwd": "${workspaceFolder}/test"
            }
        },
        {
            "label": "test-monitor",
            "args": [
                "monitor"
            ],
            "options": {
                "cwd": "${workspaceFolder}/test"
            }
        },
        {
            "label": "test-flash",
            "args": [
                "-p",
                "COM3",
                "flash",
                "monitor"
            ],
            "options": {
                "cwd": "${workspaceFolder}/test"
            }
        }
    ]
}