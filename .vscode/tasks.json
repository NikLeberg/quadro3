{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "inputs": [
        {
            // https://github.com/microsoft/vscode-cpptools/issues/6476
            "id": "cwd",
            "type": "command",
            "command": "cpptools.activeConfigCustomVariable",
            "args": "cwd"
        },
        {
            "id": "qemu",
            "type": "command",
            "command": "cpptools.activeConfigCustomVariable",
            "args": "qemu"
        }
    ],
    "type": "shell",
    "command": "idf.py",
    "presentation": {
        "clear": true,
        "showReuseMessage": false
    },
    "options": {
        "cwd": "${input:cwd}",
        "env": {
            "BASH_ENV": "$IDF_PATH/export.sh",
            "TEST_IN_QEMU": "${input:qemu}"
        }
    },
    "tasks": [
        {
            "label": "env",
            "command": "bash -l"
        },
        {
            "label": "menuconfig",
            "args": [
                "menuconfig"
            ]
        },
        {
            "label": "build",
            "args": [
                "build",
                "-DTEST_IN_QEMU=${input:qemu}"
            ]
        },
        {
            "label": "clean",
            "args": [
                "fullclean"
            ],
            "presentation": {
                "reveal": "never"
            }
        },
        {
            "label": "monitor",
            "args": [
                "monitor"
            ],
        },
        // {
        //     "label": "flash",
        //     "args": [
        //         "-p",
        //         "COM3",
        //         "flash",
        //         "monitor"
        //     ]
        // },
    ]
}